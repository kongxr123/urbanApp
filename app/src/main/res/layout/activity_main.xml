                    android:id="@+id/tv_Accz"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
        </TableRow>

        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" M-x"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Magx"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
            <TextView
                    android:layout_width="40dp"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"/>
        </TableRow>
        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" M-y"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Magy"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Pre"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
        </TableRow>
        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" M-z"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Magz"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
            <TextView
                    android:layout_width="34dp"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"/>
        </TableRow>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="GNSS"
                android:textColor="#6b5152"
                android:textAlignment="center"/>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_GNSStime"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="7"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitude(deg)"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/tv_GNSSLat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="0.000"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lngitude(deg)"
