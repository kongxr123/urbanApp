<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
            android:background="#c1cbd7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" tools:layout_editor_absoluteY="-231dp" tools:layout_editor_absoluteX="-16dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Montion Sensors"
                android:textColor="#6b5152"
                android:textAlignment="center"/>
        <TableRow>
            <TextView
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Time"
                    android:textColor="#965454"
                    android:textSize="18sp"
                    android:shadowColor="#7a7281"
                    android:shadowRadius="3.0"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_time"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="18sp"
                    android:layout_weight="5"/>
        </TableRow>
        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" W-x"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Grox"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
            <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="A-x"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Accx"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
        </TableRow>

        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" W-y"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Groy"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="A-y"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/tv_Accy"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
        </TableRow>

        <TableRow
                android:gravity="center">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" W-z"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_Groz"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-z"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
