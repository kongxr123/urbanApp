                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="7"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Altitude(m)"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_GNSSAlt"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="7"/>
        </TableRow>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="NMEA"
                android:textColor="#6b5152"
                android:textAlignment="center"/>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_NMEAtime"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="7"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitude(ddmm)"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_NMEALat"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="20sp"
                    android:layout_weight="7"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
